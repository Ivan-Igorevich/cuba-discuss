<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="ru.iovchinnikov.talks.web.testentity.TestEntityEdit"
        datasource="testEntityDs"
        focusComponent="fieldGroup"
        messagesPack="ru.iovchinnikov.talks.web.testentity">
    <dsContext>
        <datasource id="testEntityDs"
                    class="ru.iovchinnikov.talks.entity.TestEntity"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="testEntityDs">
            <column width="250px">
                <field property="name"/>
            </column>
        </fieldGroup>
        <frame id="comments"
               screen="discuss$Comment.browse"
               width="50%"/>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
